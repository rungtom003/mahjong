@model IEnumerable<MahJong.Models.databases.BookDetail>
@{
    ViewData["Title"] = "Order";
    Layout = "~/Views/Shared/_StoreLayout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Main content -->
    <section class="content">
        <table class="table">
            <thead>
                <tr>
                    <td>รหัสจอง</td>
                    <td>ชื่อ</td>
                    <td>จำนวน</td>
                    <td>ราคารวม</td>
                    <td>วันที่จอง</td>
                    <td>ชื่อโต๊ะ</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.BId)</td>
                        <td>@Html.DisplayFor(modelItem => item.B.C.CFname) @Html.DisplayFor(modelItem => item.B.C.CLname)</td>
                        <td>@Html.DisplayFor(modelItem => item.B.BQuantity)</td>
                        <td>@Html.DisplayFor(modelItem => item.B.BPriceTotal)</td>
                        <td>@Html.DisplayFor(modelItem => item.B.BDate)</td>
                        <td><bunton class="btn-link" id="callmodel" data-toggle="modal" data-target="#showtable" data-whatever="@item.T.TId">@Html.DisplayFor(modelItem => item.T.TName)</bunton></td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<!-- Modal โต๊ะ -->
<div class="modal fade" id="showtable" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">รายละเอียดโต๊ะ</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <h1></h1>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>