@model MahJong.Models.databases.Customer

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_MahjongLayout.cshtml";
}
<!-- Page Content -->
<div class="page-heading about-heading header-text" style="background-image: url();">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="text-content">
                    <h2 class="fontkanit">สมัครสมาชิก</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="latest-products">
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CFname" class="control-label"></label>
                        <input asp-for="CFname" class="form-control" />
                        <span asp-validation-for="CFname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CLname" class="control-label"></label>
                        <input asp-for="CLname" class="form-control" />
                        <span asp-validation-for="CLname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CBirthdate" class="control-label"></label>
                        <input asp-for="CBirthdate" class="form-control" type="date" />
                        <span asp-validation-for="CBirthdate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CTel" class="control-label"></label>
                        <input asp-for="CTel" class="form-control" />
                        <span asp-validation-for="CTel" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    function Showsuccess() {
        Swal.fire(
            'Good job!',
            'You clicked the button!',
            'success'
        )
    };
</script>

@if (ViewBag.JavaScriptFunction != null)
{
    <script>
        @Html.Raw(ViewBag.JavaScriptFunction)
    </script>
}
